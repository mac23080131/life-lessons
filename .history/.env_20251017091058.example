# Common
NODE_ENV=development
TZ=Asia/Bangkok

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lifelessons

# Redis
REDIS_URL=redis://localhost:6379

# Auth
JWT_SECRET=change_me_to_secure_random_string_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Backend API
API_PORT=3001
API_HOST=localhost

# Web Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# Optional
POSTHOG_KEY=
USE_TFIDF=false

# Email (mock for v1)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@lifelessons.app
